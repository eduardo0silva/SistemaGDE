<table class="perfil round ">
	<tr>
		<td class="main round">
			<h2>
				<%= gravatar_for @usuario %>
				<%= h @usuario.nome %>
			</h2>
			
			<% unless @usuario.microposts.empty? %>
				<table class="microposts">
					<%= render @microposts %>
				</table>
				<%= will_paginate @microposts %>
			<% end %>
		</td>
		
		<td class="sidebar round">
			<strong>Nome</strong> <%= @usuario.nome %><br />
			<strong>URL</strong> <%= link_to usuario_path(@usuario), usuario_path(@usuario) %>
			<strong>Posts</strong> <%= @usuario.microposts.count %>
		</td>
	</tr>
</table>